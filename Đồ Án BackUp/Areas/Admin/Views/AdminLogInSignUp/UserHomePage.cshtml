@{
    ViewBag.Title = "UserHomePage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMasterLayout.cshtml";
}

<style>
    .customercreate_body {
        padding: 50px;
        box-shadow: rgba(0, 0, 0, 0.15) 0px 15px 25px, rgba(0, 0, 0, 0.05) 0px 5px 10px;
        width: 500px;
    }

    .text {
        height: 70vh;
    }

    img {
        width: 500px;
    }

    .test {
        height: 50%;
    }

    p {
        border-radius: 20px;
    }
</style>
