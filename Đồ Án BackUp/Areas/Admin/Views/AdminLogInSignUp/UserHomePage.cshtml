<div class="container text mt-5">
    <div class="d-flex test align-items-center justify-content-center" style="margin: 200px 0 0 0">
        <img src="https://upload.wikimedia.org/wikipedia/commons/4/43/Logo_Tiki_2023.png" />
        <div class="customercreate_body" style="margin : 50px 0 0 100px;">
            <div class="form-group">
                @foreach (var items in Model)
                {
                    if (Session["AdminUsername"].ToString().Equals(items.Username))
                    {
                        <div class="Username_Display">
                            <h6> Tên Người Dùng </h6>
                            <p class="bg-primary p-3 text-light">
                                @Html.DisplayFor(model => items.Username)
                            </p>
                        </div>

                        <div class="UserPassword_Display">
                            <h6> Mật Khẩu Người Dùng </h6>
                            <p class="bg-primary p-3 text-light">
                                @Html.DisplayFor(model => items.Password)
                            </p>
                        </div>
                    }
                }
                @Html.ActionLink("Chỉnh Sửa Thông Tin Tài Khoản", "EditUserAccount", "AdminLogInSignUp", new { Area = "Admin", UserName = Session["AdminUsername"].ToString() }, new { @class = "btn btn-primary" })
            </div>
        </div>

    </div>
</div>


