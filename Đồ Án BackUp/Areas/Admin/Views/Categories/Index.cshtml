@model IEnumerable<Đồ_Án_BackUp.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMasterLayout.cshtml";
}

<h2 class="text-center mt-5 mb-5">Category List</h2>

<div class="container">
    <table class="table table-dark table-striped w-100">
        <tr>
            <th scope="col" class="w-25 text-center">
                <p>
                    Category Id
                </p>
            </th>

            <th scope="col" class="w-25 text-center">
                Category Name
            </th>

            <th class="w-50 text-center">
                Category Option
            </th>
        </tr>

      

        @foreach (var items in Model)
        {
            <tr>

                <td style="padding : 10px 50px">
                    @Html.DisplayFor(Items => items.CategoryID)
                </td>


                <td class="text-start" style="padding : 10px 50px">
                    @Html.DisplayFor(Items => items.CategoryName)
                </td>

            
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = items.CategoryID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = items.CategoryID }, new { @class = "btn btn-info text-light" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = items.CategoryID }, new { @class = "btn btn-danger" })
                </td>
            </tr>

           
        }

        
    </table>

    @Html.ActionLink("Back To Catogeries Home " , "Home" , " " , new {@class = "btn btn-success mt-3 mb-3"}) 
    @Html.ActionLink("Create New Categories " , "Create" , "Categories" , new {area = "Admin"} , new {@class  = "btn btn-primary mt-3 mb-3"} )
</div>
