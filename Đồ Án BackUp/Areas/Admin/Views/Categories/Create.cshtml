@model Đồ_Án_BackUp.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMasterLayout.cshtml";
}

<h2 class="text-center mt-5">Create Category </h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="text-center">Category</h4>
        <div class="container">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2 mt-2 mb-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control mt-2 mb-2" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger mt-2 mb-2" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary mt-2 mb-2" />
                </div>
            </div>

            <div>
                @Html.ActionLink("Go To List", "Index" , " " , new {@class = "btn btn-primary" } )
                Or
                @Html.ActionLink("Back The Category management" , "Home" , " ", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
