@model Đồ_Án_BackUp.Models.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Users/Views/Shared/_UserMasterLayout.cshtml";
}

<style>
    .customercreate_body {
        padding: 50px;
        box-shadow: rgba(0, 0, 0, 0.15) 0px 15px 25px, rgba(0, 0, 0, 0.05) 0px 5px 10px;
        width: 500px;
    }

    .text {
        height: 70vh;
    }

    img {
        width: 500px;
    }

    .test {
        height: 50%;
    }
</style>

<div class="mt-5 mb-5" style="margin-left : 30px;">
    @Html.ActionLink("Trang Chủ", "Index", "Home2", new { Area = "Users" }, new { @class = "text-uppercase btn btn-outline-primary" }) ------->
    @Html.ActionLink("Thông Tin Tài Khoản", "UserHomePage", "LoginSignIn", new { Area = "Users" }, new { @class = "text-uppercase btn btn-outline-success" }) -------->
    @Html.ActionLink("Chỉnh Sửa Thông Tin Tài Khoản", "EditUserAccount", "LoginSignIn", new { Area = "Users", UserName = Session["Username"].ToString() } , new { @class = "text-uppercase btn btn-outline-success" })

</div>


@using (Html.BeginForm())
{
    <div class="container">
    </div>
    <div class="container text mt-5">
        <h5 style="margin : 200px 0 0 180px;"> Chỉnh Sửa Thông Tin Giao Hàng </h5>
        <div class="mt-5 d-flex test align-items-center justify-content-center">
            <img src="https://upload.wikimedia.org/wikipedia/commons/4/43/Logo_Tiki_2023.png" />
            <div class="customercreate_body" style="margin : 50px 0 0 100px;">
                <div class="form-group">
                    <h6> Tên Người Dùng </h6>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })

                    <h6 class="mt-2"> Mật Khẩu Người Dùng </h6>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control mt-2 mb-2 w-100" } })

                    <h6> Nhập Lại Mật Khẩu </h6>
                    @Html.EditorFor(model => model.Repassword, new { htmlAttributes = new { @class = "form-control mt-2 mb-2 w-100" } })
                    @Html.ValidationMessageFor(model => model.Repassword, "", new { @class = "text-danger" })

                    <div>
                        <input type="submit" value="Lưu" class="btn btn-primary mt-2" />
                    </div>
                </div>
            </div>

        </div>
    </div>
}

